</head>

<body>

    <%- include('navi_bar') %>

    <div class="container">
        
        <h2 class="mb-4"><%= blog.title %></h2> 

        <div class="text-muted mb-4"> Created on: <%= blog.DateCreated.toLocaleDateString() %></div>
        
        <a href="/blogs/edit/<%= blog.id %>" class = "btn btn-info">Edit</a>

        <hr>

        <div>
            <%= blog.full_blog %>
        </div>

    </div>

</body>

